<h1>Companies</h1>

<table class="table">
  <thead>
  <tr>
    <th>Corporate Name</th>
    <th>Trading Name</th>
    <th>Registration Number</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  </thead>
  <tbody>
  <% @companies.each do |company| %>
    <tr>
      <td><%= company.corporate_name %></td>
      <td><%= company.trading_name %></td>
      <td><%= company.registration_number %></td>
      <td><%= company.status %></td>
      <td> <%= link_to "Show this company", company %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<% if @companies.empty? %>
  <p>No companies yet!</p>
<% end %>

<%= link_to "New Company", new_company_path %>
<br>
<br>

<h3>Consulta de pre√ßos</h3>
<div class="form w-50 p-3">
  <%= form_with url: price_queries_path, method: :get do |f| %>
    <div class="row">
      <%= f.label :height, 'Package Height' %>
      <%= f.number_field :height, :step => "0.01" %>
    </div>
    <div class="row">
      <%= f.label :width, 'Package Width' %>
      <%= f.number_field :width, :step => "0.01"  %>
    </div>
    <div class="row">
      <%= f.label :depth, 'Package Depth' %>
      <%= f.number_field :depth, :step => "0.01"  %>
    </div>
    <div class="row">
      <%= f.label :weight, 'Package Weight' %>
      <%= f.number_field :weight, :step => "0.01"  %>
    </div>
    <div class="row">
      <%= f.label :distance, 'Distance' %>
      <%= f.number_field :distance, :step => "0.01"  %>
    </div>
    <%= f.submit 'Consult Prices' %>
  <% end %>
</div>
