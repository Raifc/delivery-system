<h1 class="text-center display-5 bg-dark text-white">  <%= Company.model_name.human(:count => Company.count) %> </h1>
<div class="container">

  <% if @companies.empty? %>
    <p> Nenhuma transportadora cadastrada! </p>
  <% end %>

  <div class="col">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
      <tr>
        <th scope="row"> <%= Company.human_attribute_name(:corporate_name) %> </th>
        <th scope="row"> <%= Company.human_attribute_name(:trading_name) %> </th>
        <th scope="row"> <%= Company.human_attribute_name(:registration_number) %> </th>
        <th scope="row"> <%= Company.human_attribute_name(:status) %> </th>
        <th scope="row"> Ação</th>
      </tr>
      </thead>
      <tbody>
      <% @companies.each do |company| %>
        <tr>
          <td> <%= company.corporate_name %> </td>
          <td> <%= company.trading_name %> </td>
          <td> <%= company.registration_number %> </td>
          <td> <%= company.status %> </td>
          <td> <%= link_to "Ver", company %> </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



<p class="text-center">
  <%= link_to "Nova Transportadora", new_company_path %> |
  <%= link_to "Produtos", products_path %> </p>

<br>
<br>

<h3 class="text-center bg-dark text-white "> Consulta de preços </h3>

<div class="d-flex justify-content-center bg-light text-center">
  <div class="form w-50 p-3">

    <%= form_with url: price_queries_path, method: :get do |f| %>

      <div class="row">
        <%= f.label :height, 'Altura do pacote (cm)' %>
        <%= f.number_field :height, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :width, 'Largura do pacote (cm)' %>
        <%= f.number_field :width, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :depth, 'Profundidade do pacote (cm)' %>
        <%= f.number_field :depth, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :weight, 'Peso do pacote (Gramas)' %>
        <%= f.number_field :weight, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :distance, 'Distância (km)' %>
        <%= f.number_field :distance, :step => "0.01" %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.submit 'Consultar Preços' %>
      </div>

    <% end %>

  </div>
</div>
