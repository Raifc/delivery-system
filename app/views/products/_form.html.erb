<% if (@product.errors.any?) %>
  <p>Please check the errors below</p>
  <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li id='new_errors'><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @product do |f| %>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_field :code %>
  </div>

  <div class="form-group">
    <%= f.label :height %>
    <%= f.text_field :height %>
  </div>

  <div class="form-group">
    <%= f.label :width %>
    <%= f.text_field :width %>
  </div>

  <div class="form-group">
    <%= f.label :depth %>
    <%= f.text_field :depth %>
  </div>

  <div class="form-group">
    <%= f.label :weight %>
    <%= f.text_field :weight %>
  </div>

  <%= f.submit 'Submit' %>

<% end %>
