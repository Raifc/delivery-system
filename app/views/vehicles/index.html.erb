<div class="container">
  <h2 class="text-center display-4 bg-dark text-white">  <%= Vehicle.model_name.human(:count => Vehicle.count) %> </h2>
</div>

<div class="container">
  <% if @vehicles.empty? %>
    <p>Nenhum veículo cadastrado!</p>
  <% end %>

  <div class="col">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
      <tr>
        <th scope="row"><%= Vehicle.human_attribute_name(:model) %></th>
        <th scope="row"><%= Vehicle.human_attribute_name(:brand) %></th>
        <th scope="row"><%= Vehicle.human_attribute_name(:year) %></th>
        <th scope="row"><%= Vehicle.human_attribute_name(:load_capacity) %></th>
        <th scope="row"><%= Vehicle.human_attribute_name(:license_plate) %></th>
        <th scope="row">Ação</th>
      </tr>
      </thead>

      <tbody>
      <% @vehicles.each do |vehicle| %>
        <tr>
          <td><%= vehicle.model %></td>
          <td><%= vehicle.brand %></td>
          <td><%= vehicle.year %></td>
          <td><%= vehicle.load_capacity %></td>
          <td><%= vehicle.license_plate %></td>
          <td><%= link_to "Ver", company_vehicle_path(@company, vehicle) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>


<div class="d-flex justify-content-center">
  <%= link_to "Novo veículo", new_company_vehicle_path, :class => "btn btn-primary mt-3" %>
</div>