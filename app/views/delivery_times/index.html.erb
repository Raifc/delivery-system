<h1 class="text-center display-4 bg-dark text-white">  <%= DeliveryTime.model_name.human %> </h1>
<div class="container">

  <% if @delivery_times.empty? %>
    <p> Nenhum tempo de entrega cadastrado! </p>
  <% end %>

  <div class="col">

    <table class="table table-striped table-hover">
      <thead class="table-dark">
      <tr>
        <th scope="row"> <%= DeliveryTime.human_attribute_name(:min_distance) %> </th>
        <th scope="row"> <%= DeliveryTime.human_attribute_name(:max_distance) %> </th>
        <th scope="row"> <%= DeliveryTime.human_attribute_name(:business_days) %> </th>
        <th scope="row"> Ação</th>
      </tr>
      </thead>

      <tbody>
      <% @delivery_times.each do |delivery_time| %>
        <tr>
          <td><%= delivery_time.min_distance %></td>
          <td><%= delivery_time.max_distance %></td>
          <td><%= delivery_time.business_days %></td>
          <td><%= link_to "Mostrar", company_delivery_time_path(@company, delivery_time) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>



<div class="d-flex justify-content-center">
  <p> <%= link_to "Novo Tempo de entrega", new_company_delivery_time_path %> || </p>
  <p> <%= link_to "Voltar", company_path(@company) %> </p>
</div>