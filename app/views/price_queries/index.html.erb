<div class="container">
  <h2 class="text-center display-5 bg-dark text-white rounded-pill"> Consulta de preços </h2>
</div>

<div class="d-flex justify-content-center bg-light text-center">
  <div class="form w-50 p-3">

    <%= form_with url: price_queries_path, method: :get do |f| %>

      <div class="row">
        <%= f.label :height, 'Altura do pacote (cm)' %>
        <%= f.number_field :height, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :width, 'Largura do pacote (cm)' %>
        <%= f.number_field :width, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :depth, 'Profundidade do pacote (cm)' %>
        <%= f.number_field :depth, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :weight, 'Peso do pacote (Gramas)' %>
        <%= f.number_field :weight, :step => "0.01" %>
      </div>

      <div class="row">
        <%= f.label :distance, 'Distância (km)' %>
        <%= f.number_field :distance, :step => "0.01" %>
      </div>

      <div class="d-flex justify-content-center">
        <%= f.submit 'Consultar Preços',  :class => "btn btn-primary mt-2" %>
      </div>

    <% end %>

  </div>

</div>