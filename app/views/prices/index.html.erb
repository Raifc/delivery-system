<div class="container">
  <h2 class="text-center display-4 bg-dark text-white">  <%= Price.model_name.human(:count => Price.count) %>  </h2>
</div>

<div class="container">

  <% if @prices.empty? %>
    <p>Nenhum preço cadastrado!</p>
  <% end %>

  <div class="col">

    <table class="table table-striped table-hover">
      <thead class="table-dark">
      <tr>
        <th> <%= Price.human_attribute_name(:min_volume) %> </th>
        <th> <%= Price.human_attribute_name(:max_volume) %> </th>
        <th> <%= Price.human_attribute_name(:min_weight) %> </th>
        <th> <%= Price.human_attribute_name(:max_weight) %> </th>
        <th> <%= Price.human_attribute_name(:km_value) %> </th>
        <th>Ação</th>
      </tr>
      </thead>
      <tbody>
      <% @prices.each do |price| %>
        <tr>
          <td> <%= price.min_volume %>cm³</td>
          <td> <%= price.max_volume %>cm³</td>
          <td> <%= price.min_weight %>g</td>
          <td> <%= price.max_weight %>g</td>
          <td> R$<%= price.km_value %> </td>
          <td> <%= link_to "Ver", company_price_path(@company, price) %> </td>
        </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>


<div class="d-flex justify-content-center">
  <%= link_to "Novo preço", new_company_price_path, :class => "btn btn-primary mt-3" %>
</div>